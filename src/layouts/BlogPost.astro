---
import BaseLayout from './BaseLayout.astro';

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title + " | Joshua Yang"} bodyClass="blog-wide with-sidebar" showSidebar={true}>
  <header>
    <p class="back-link"><a href="/">← back</a></p>
    <h1>{frontmatter.title}</h1>
    <div class="post-meta">
      <span class="post-date">created: {frontmatter.created ?? frontmatter.date}</span>
      {frontmatter.updated && <span class="post-updated">last updated: {frontmatter.updated}</span>}
    </div>
  </header>

  <main>
    <article class="blog-post">
      <slot />
    </article>
  </main>

  <footer>
    <p>© 2025 Joshua Yang</p>
  </footer>
</BaseLayout>

<style>
  .post-meta {
    margin-top: 0.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
    align-items: flex-start;
  }

  .post-date,
  .post-updated {
    color: #888;
    font-size: 0.9rem;
    margin-top: 0;
  }

  .back-link a {
    font-size: 1.05rem;
  }
  
  .blog-post {
    max-width: 1040px;
    margin: 0 auto;
    padding: 0 0 4rem;
    line-height: 1.7;
  }
  
  .blog-post :global(h2) {
    margin-top: 2rem;
    margin-bottom: 0.5rem;
  }
  
  .blog-post :global(pre) {
    background: #f5f5f5;
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
  }
  
  .blog-post :global(code) {
    font-family: 'Courier New', monospace;
    font-size: 0.9em;
  }

  /* Obsidian Callout Styles */
  .blog-post :global(blockquote[data-callout]) {
    margin: 1.5rem 0;
    padding: 0;
    border: none;
    border-radius: 6px;
    overflow: hidden;
    background: #f8f9fa;
    border-left: 4px solid #448aff;
  }

  .blog-post :global(.callout-title) {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: rgba(68, 138, 255, 0.1);
    font-weight: 600;
    font-size: 0.95rem;
  }

  .blog-post :global(.callout-title-icon) {
    display: flex;
    align-items: center;
    color: #448aff;
  }

  .blog-post :global(.callout-title-icon svg) {
    width: 18px;
    height: 18px;
  }

  .blog-post :global(.callout-content) {
    padding: 0.75rem 1rem;
  }

  /* Lists inside callouts need special handling */
  .blog-post :global(blockquote[data-callout] ul) {
    list-style: disc;
    padding-left: 1.5rem;
    margin: 0.5rem 1rem 0.75rem;
  }

  .blog-post :global(blockquote[data-callout] ul ul) {
    list-style: circle;
    margin: 0.25rem 0;
  }

  .blog-post :global(blockquote[data-callout] ul ul ul) {
    list-style: square;
  }

  .blog-post :global(blockquote[data-callout] li) {
    margin-bottom: 0.35rem;
    color: var(--text-secondary, #2a2a2a);
  }

  /* Callout type variations */
  .blog-post :global(blockquote[data-callout="note"]) {
    border-left-color: #448aff;
  }
  .blog-post :global(blockquote[data-callout="note"] .callout-title) {
    background: rgba(68, 138, 255, 0.1);
  }
  .blog-post :global(blockquote[data-callout="note"] .callout-title-icon) {
    color: #448aff;
  }

  .blog-post :global(blockquote[data-callout="tip"]),
  .blog-post :global(blockquote[data-callout="hint"]) {
    border-left-color: #00bfa5;
  }
  .blog-post :global(blockquote[data-callout="tip"] .callout-title),
  .blog-post :global(blockquote[data-callout="hint"] .callout-title) {
    background: rgba(0, 191, 165, 0.1);
  }
  .blog-post :global(blockquote[data-callout="tip"] .callout-title-icon),
  .blog-post :global(blockquote[data-callout="hint"] .callout-title-icon) {
    color: #00bfa5;
  }

  .blog-post :global(blockquote[data-callout="warning"]),
  .blog-post :global(blockquote[data-callout="caution"]) {
    border-left-color: #ff9100;
  }
  .blog-post :global(blockquote[data-callout="warning"] .callout-title),
  .blog-post :global(blockquote[data-callout="caution"] .callout-title) {
    background: rgba(255, 145, 0, 0.1);
  }
  .blog-post :global(blockquote[data-callout="warning"] .callout-title-icon),
  .blog-post :global(blockquote[data-callout="caution"] .callout-title-icon) {
    color: #ff9100;
  }

  .blog-post :global(blockquote[data-callout="danger"]),
  .blog-post :global(blockquote[data-callout="error"]) {
    border-left-color: #ff5252;
  }
  .blog-post :global(blockquote[data-callout="danger"] .callout-title),
  .blog-post :global(blockquote[data-callout="error"] .callout-title) {
    background: rgba(255, 82, 82, 0.1);
  }
  .blog-post :global(blockquote[data-callout="danger"] .callout-title-icon),
  .blog-post :global(blockquote[data-callout="error"] .callout-title-icon) {
    color: #ff5252;
  }

  .blog-post :global(blockquote[data-callout="info"]) {
    border-left-color: #00b8d4;
  }
  .blog-post :global(blockquote[data-callout="info"] .callout-title) {
    background: rgba(0, 184, 212, 0.1);
  }
  .blog-post :global(blockquote[data-callout="info"] .callout-title-icon) {
    color: #00b8d4;
  }

  .blog-post :global(blockquote[data-callout="question"]),
  .blog-post :global(blockquote[data-callout="faq"]) {
    border-left-color: #aa00ff;
  }
  .blog-post :global(blockquote[data-callout="question"] .callout-title),
  .blog-post :global(blockquote[data-callout="faq"] .callout-title) {
    background: rgba(170, 0, 255, 0.1);
  }
  .blog-post :global(blockquote[data-callout="question"] .callout-title-icon),
  .blog-post :global(blockquote[data-callout="faq"] .callout-title-icon) {
    color: #aa00ff;
  }

  .blog-post :global(blockquote[data-callout="example"]) {
    border-left-color: #7c4dff;
  }
  .blog-post :global(blockquote[data-callout="example"] .callout-title) {
    background: rgba(124, 77, 255, 0.1);
  }
  .blog-post :global(blockquote[data-callout="example"] .callout-title-icon) {
    color: #7c4dff;
  }

  .blog-post :global(blockquote[data-callout="quote"]),
  .blog-post :global(blockquote[data-callout="cite"]) {
    border-left-color: #9e9e9e;
  }
  .blog-post :global(blockquote[data-callout="quote"] .callout-title),
  .blog-post :global(blockquote[data-callout="cite"] .callout-title) {
    background: rgba(158, 158, 158, 0.1);
  }
  .blog-post :global(blockquote[data-callout="quote"] .callout-title-icon),
  .blog-post :global(blockquote[data-callout="cite"] .callout-title-icon) {
    color: #9e9e9e;
  }
</style>
